{
  "manifest_version": 3,
  "name": "Work Time Tracker",
  "version": "1.0",
  "description": "Automatically tracks the time spent on completed tasks throughout the work day.",
  "icons": {
    "16": "./images/good_pace_16.png",
    "32": "./images/good_pace_32.png",
    "48": "./images/good_pace_48.png",
    "128": "./images/good_pace_128.png"
  },
  "background": {
    "service_worker": "./background.js"
  },
  "action": {
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["./scripts/submit-task.js"],
      "matches": ["https://www.raterhub.com/evaluation/rater/task/show*"]
    },
    {
      "js": ["./scripts/grab-task.js"],
      "matches": [
        "https://www.raterhub.com/evaluation/rater",
        "https://www.raterhub.com/evaluation/rater/",
        "https://www.raterhub.com/evaluation/rater/task/index",
        "https://www.raterhub.com/evaluation/rater/task/index/"
      ]
    }
  ],
  "permissions": ["storage", "alarms"]
}
