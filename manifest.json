{
  "manifest_version": 3,
  "name": "Work Time Tracker",
  "version": "1.0",
  "description": "Automatically tracks the time spent on completed tasks throughout the work day.",
  "icons": {
    "16": "./images/good_pace.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_icon": "./images/good_pace.png",
    "default_popup": "./popup/popup.html"
  },
  "content_scripts": [
    {
      "js": ["./scripts/update-time.js"],
      "matches": ["https://www.raterhub.com/evaluation/rater/task/show*"]
    }
  ]
}
