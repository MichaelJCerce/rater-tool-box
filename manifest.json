{
  "manifest_version": 3,
  "name": "Rater Tool Box",
  "version": "2.0",
  "description": "Provides helpful features for Search Quality Raters.",
  "icons": {
    "16": "./assets/images/good_pace_16.png",
    "32": "./assets/images/good_pace_32.png",
    "48": "./assets/images/good_pace_48.png",
    "128": "./assets/images/good_pace_128.png"
  },
  "background": {
    "service_worker": "./scripts/background.js"
  },
  "action": {
    "default_popup": "./pages/popup/popup.html"
  },
  "content_scripts": [
    {
      "js": [
        "./scripts/update-task.js",
        "./scripts/open-results.js",
        "./scripts/submit-task.js"
      ],
      "matches": ["https://www.raterhub.com/evaluation/rater/task/show*"]
    },
    {
      "js": ["./scripts/grab-task.js"],
      "matches": [
        "https://www.raterhub.com/evaluation/rater",
        "https://www.raterhub.com/evaluation/rater/",
        "https://www.raterhub.com/evaluation/rater/task/index",
        "https://www.raterhub.com/evaluation/rater/task/index/"
      ]
    }
  ],
  "permissions": ["alarms", "offscreen", "storage"]
}
